<Window x:Class="BalloonTextChanger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BalloonTextChanger"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Grid.Column="0" Name="mainCanvas" />
        <StackPanel Grid.Row="1" Grid.Column="0">
            <Button x:Name="btnLoadImage" Content="Load Image" Click="btnLoadImage_Click"  />
        </StackPanel>
    </Grid>
</Window>
